require_relative '../../node_modules/.pnpm/@capacitor+ios@7.4.4_@capacitor+core@7.4.4/node_modules/@capacitor/ios/scripts/pods_helpers'

platform :ios, '14.0'
use_frameworks!

# workaround to avoid Xcode caching of Pods that requires
# Product -> Clean Build Folder after new Cordova plugins installed
# Requires CocoaPods 1.6 or newer
install! 'cocoapods', :disable_input_output_paths => true

def capacitor_pods
  pod 'Capacitor', :path => '../../node_modules/.pnpm/@capacitor+ios@7.4.4_@capacitor+core@7.4.4/node_modules/@capacitor/ios'
  pod 'CapacitorCordova', :path => '../../node_modules/.pnpm/@capacitor+ios@7.4.4_@capacitor+core@7.4.4/node_modules/@capacitor/ios'
  pod 'CapacitorCommunityAppleSignIn', :path => '../../node_modules/.pnpm/@capacitor-community+apple-sign-in@7.1.0_@capacitor+core@7.4.4/node_modules/@capacitor-community/apple-sign-in'
  pod 'CapacitorApp', :path => '../../node_modules/.pnpm/@capacitor+app@7.1.0_@capacitor+core@7.4.4/node_modules/@capacitor/app'
  pod 'CapacitorBrowser', :path => '../../node_modules/.pnpm/@capacitor+browser@7.0.2_@capacitor+core@7.4.4/node_modules/@capacitor/browser'
  pod 'CapacitorPreferences', :path => '../../node_modules/.pnpm/@capacitor+preferences@7.0.2_@capacitor+core@7.4.4/node_modules/@capacitor/preferences'
  pod 'CodetrixStudioCapacitorGoogleAuth', :path => '../../node_modules/.pnpm/@codetrix-studio+capacitor-google-auth@3.4.0-rc.4_@capacitor+core@7.4.4/node_modules/@codetrix-studio/capacitor-google-auth'
end

target 'App' do
  capacitor_pods
  # Add your Pods here
end

post_install do |installer|
  assertDeploymentTarget(installer)
  
  # Add Privacy Manifests to GTM frameworks
  installer.pods_project.targets.each do |target|
    if target.name == 'GTMAppAuth'
      privacy_file = File.join(target.project.path.dirname, 'GTMAppAuth/GTMAppAuth/Sources/Resources/PrivacyInfo.xcprivacy')
      if File.exist?(privacy_file)
        resource_build_phase = target.resources_build_phase
        file_ref = target.project.new_file(privacy_file)
        resource_build_phase.add_file_reference(file_ref, true)
      end
    elsif target.name == 'GTMSessionFetcher'
      privacy_file = File.join(target.project.path.dirname, 'GTMSessionFetcher/Sources/Core/Resources/PrivacyInfo.xcprivacy')
      if File.exist?(privacy_file)
        resource_build_phase = target.resources_build_phase
        file_ref = target.project.new_file(privacy_file)
        resource_build_phase.add_file_reference(file_ref, true)
      end
    elsif target.name == 'GoogleSignIn-GoogleSignIn'
      privacy_file = File.join(target.project.path.dirname, 'GoogleSignIn/GoogleSignIn/Sources/Resources/PrivacyInfo.xcprivacy')
      if File.exist?(privacy_file)
        resource_build_phase = target.resources_build_phase
        file_ref = target.project.new_file(privacy_file)
        resource_build_phase.add_file_reference(file_ref, true)
      end
    end
  end
end
